<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
		 http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">

    <display-name>City Register</display-name>


    <servlet>
        <servlet-name>JerseyServlet</servlet-name> <!-- Имя сервлета -->
        <servlet-class>org.glassfish.jersey.servlet.ServletContainer</servlet-class>
        <init-param>
            <param-name>jersey.config.server.provider.packages</param-name><!-- Регистрация сервисов -->
            <param-value>com.apys.learning.city_register.web</param-value> <!-- Где искать сервисы -->
        </init-param>
        <init-param>
            <param-name>jersey.config.server.provider.scanning.recursive</param-name> <!-- Парам сканирования -->
            <param-value>false</param-value> <!-- Говорит о том искать ли аннотации во вложенных папках -->
        </init-param>
    </servlet>
    <servlet-mapping>
        <servlet-name>JerseyServlet</servlet-name>
        <url-pattern>/rest/*</url-pattern> <!-- Говорит, что все что обращается по данной ссылке передается
                                                сервлету JerseyServlet  -->
    </servlet-mapping>

    <resource-ref>
        <description>DB Connection</description>
        <res-ref-name>jdbc/cityRegister</res-ref-name>
        <res-type>javax.sql.DataSource</res-type>
        <res-auth>Container</res-auth>
    </resource-ref>
</web-app>